<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/net_image_id"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/music20" />

    <TextView
        android:id="@+id/net_songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/net_image_id"
        android:textColor="#0b0b0b"
        android:text="歌名:" />

    <TextView
        android:id="@+id/net_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/net_songname"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/net_image_id"
        android:textColor="#0b0b0b"
        android:text="歌手:" />

    <ImageView
        android:id="@+id/net_more"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_margin="18dp"
        android:src="@drawable/open2"

        />

</RelativeLayout>